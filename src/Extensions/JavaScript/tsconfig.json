{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "removeComments": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "Build",
        "baseUrl": ".",
        "paths": {
            "*": [
                "Typings/*",
                "*"
            ]
        }
    },
    "exclude": [
        "Tasks/**",
        "node_modules/**"
    ]
}
