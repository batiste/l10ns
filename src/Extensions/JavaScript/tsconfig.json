{
	"compilerOptions": {
		"module": "amd",
		"target": "es6",
		"noImplicitAny": true,
        "noImplicitThis": true,
		"sourceMap": false,
        "removeComments": true,
        "moduleResolution": "node",
		"strictNullChecks": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
		"outFile": "Build/l10ns-js",
		"baseUrl": ".",
		"paths": {
			"*": [
				"Typings/*",
				"*"
			]
		}
	},
    "exclude": [
        "Tasks/**",
        "node_modules/**"
    ]
}
